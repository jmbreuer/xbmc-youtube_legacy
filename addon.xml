<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.youtube.beta"
       name="YouTube Beta"
       version="2.1.0"
       provider-name="TheCollective">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.dialogaddonscan" version="1.0.6"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>YouTube video plugin</summary>
    <description>Plugin that let's you to browse and play videos from everybody's favorite video site!</description>
    <disclaimer>Some parts of this addon may not be legal in your country of residence - please check with your local laws before installing.</disclaimer>
  </extension>
</addon>
